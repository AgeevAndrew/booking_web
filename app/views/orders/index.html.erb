<div class="ui grid">
  <div class="right floated center aligned four wide column" >
      <span id="time"></span> до автообновления
  </div>
</div>
<%= react_component("OrderList") %>

<script language="JavaScript">
  function refresh() {
     location.reload();
  }
  function startTimer(duration, display) {
    var timer = duration, minutes, seconds;
    setInterval(function () {
        minutes = parseInt(timer / 60, 10)
        seconds = parseInt(timer % 60, 10);

        minutes = minutes < 10 ? "0" + minutes : minutes;
        seconds = seconds < 10 ? "0" + seconds : seconds;

        display.textContent = minutes + ":" + seconds;

        if (--timer < 0) {
            timer = 0;
        }
    }, 1000);
  }

  window.onload = function () {
      var seconds_to_refresh = 5 * 60,
      display = document.querySelector('#time');
      startTimer(seconds_to_refresh, display);
      setTimeout(refresh, seconds_to_refresh * 1000 + 1000);
    };
</script>
